<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>


<AnchorPane id="goToScannerScene" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.barcodescanner.controller.ProductViewController">
    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="77.0" stroke="BLACK" strokeType="INSIDE"
               width="400.0"/>
    <Label layoutX="37.0" layoutY="13.0" text="BARCODE SCANNER">
        <font>
          <Font name="System Bold" size="34.0"/>
        </font>
        <textFill>
          <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
              <stops>
                  <Stop>
                      <color>
                          <Color/>
                      </color>
                  </Stop>
                  <Stop offset="1.0">
                      <color>
                          <Color red="1.0" green="1.0" blue="1.0"/>
                      </color>
                  </Stop>
              </stops>
          </RadialGradient>
        </textFill>
    </Label>
    <Button fx:id="sceneButton" onAction="#sceneSwitch" layoutX="268.0" layoutY="86.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="131.0"
            text="Scanner Scene --&gt;" wrapText="true">
        <font>
          <Font name="System Bold" size="12.0"/>
        </font>
        <cursor>
          <Cursor fx:constant="OPEN_HAND"/>
        </cursor>
    </Button>
    <ImageView fx:id="productImage" fitHeight="110.0" fitWidth="139.0" layoutX="131.0" layoutY="134.0" pickOnBounds="true"
               preserveRatio="true"/>
    <Label fx:id="productName" layoutX="155.0" layoutY="264.0" text="Product Name">
        <font>
          <Font name="System Italic" size="14.0"/>
        </font>
    </Label>
    <Label fx:id="productBarcode" layoutX="175.0" layoutY="322.0" text="Barcode">
        <font>
          <Font name="System Italic" size="14.0"/>
        </font>
    </Label>
    <Label fx:id="productPrice" layoutX="186.0" layoutY="380.0" text="Price">
        <font>
          <Font name="System Italic" size="14.0"/>
        </font>
    </Label>
    <Label fx:id="productDescription" layoutX="166.0" layoutY="436.0" text="Description">
        <font>
          <Font name="System Italic" size="14.0"/>
        </font>
    </Label>
</AnchorPane>
